FROM node:20-alpine

# This Dockerfile is for local Docker Compose use only.
# For production, deploy the frontend to Vercel from source (no Dockerfile needed).

WORKDIR /app

COPY frontend/package*.json ./
RUN npm install

COPY frontend .

RUN npm run build

EXPOSE 3000

CMD ["npm", "start"]

